<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeTextType="uniform"
        android:background="#dfdfdf"
        android:gravity="center"
        android:maxLines="1"
        android:padding="16dp"
        android:text="Glide.with(this).load(url).into(imageView);"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_cache_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:sDividerLineType="none"
        app:sLeftIconHeight="24dp"
        app:sLeftIconRes="@color/colorAccent"
        app:sLeftIconWidth="8dp"
        app:sLeftTextGravity="center"
        app:sLeftTextSize="16dp"
        app:sRightTextColor="#A1A1A1"
        app:sRightTextSize="14dp"
        app:sRightTextString="更多"
        app:sRightTvDrawableHeight="16dp"
        app:sRightTvDrawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:sRightTvDrawableWidth="16dp"
        app:sLeftTextString="Glide缓存机制" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cache_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="【内存缓存】【硬盘缓存】【缓存Key】\n【Lru算法思想】"
        android:padding="8dp"
        android:textSize="14dp"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cache_title" />

    <com.allen.library.SuperTextView
        android:id="@+id/tv_callback_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cache_content"
        app:sDividerLineType="none"
        app:sLeftIconHeight="24dp"
        app:sLeftIconRes="@color/colorAccent"
        app:sLeftIconWidth="8dp"
        app:sLeftTextGravity="center"
        app:sLeftTextSize="16dp"
        app:sLeftTextString="Glide回调和监听"
        app:sRightTextColor="#A1A1A1"
        app:sRightTextSize="14dp"
        app:sRightTextString="更多"
        app:sRightTvDrawableHeight="16dp"
        app:sRightTvDrawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:sRightTvDrawableWidth="16dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_callback_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="【Target】\n【into()】\n【preload()】【submit()】\n【listener()】"
        android:padding="16dp"
        android:textSize="14dp"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_callback_title" />
</androidx.constraintlayout.widget.ConstraintLayout>